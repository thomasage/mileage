{% extends 'record/base.html.twig' %}

{% block body %}

    <div id="page-record-edit">

        <div class="d-flex flex-row mt-4">
            <h3 class="flex-grow-1">{{ 'title.edit_record'|trans }}</h3>
            <div>
                <a href="{{ path('app_record_index') }}" class="btn btn-outline-secondary">
                    <span class="fa fa-times"></span>
                    {{ 'action.cancel'|trans }}
                </a>
            </div>
        </div>

        <div class="mt-4">
            {{ form_start(formEdit) }}
            {{ form_widget(formEdit) }}
            <div class="mt-4">
                <button type="submit" class="btn btn-success">
                    <span class="fa fa-save"></span>
                    {{ 'action.save'|trans }}
                </button>
                <a href="{{ path('app_record_index') }}" class="btn btn-outline-secondary">
                    <span class="fa fa-times"></span>
                    {{ 'action.cancel'|trans }}
                </a>
            </div>
            {{ form_end(formEdit) }}
        </div>

        <h5 class="mt-5 border-bottom text-danger">{{ 'danger_zone'|trans }}</h5>

        {{ form_start(formDelete) }}
        {{ form_widget(formDelete) }}
        <div>
            <button type="submit" class="btn btn-danger btn-sm">
                <span class="fa fa-trash"></span>
                {{ 'action.delete'|trans }}
            </button>
        </div>
        {{ form_end(formDelete) }}

    </div>

{% endblock %}
